// https://github.com/neoclide/coc.nvim/wiki/Using-the-configuration-file
// inspiration: https://github.com/hallettj/dot-vim/blob/master/home/.config/nvim/coc-settings.json
{
  "diagnostic": {
    "level": "warning",
    "signLevel": "warning",
    "messageLevel": "error",
    "warningSign": "ÔÅ±"
  },
  "languageserver": {
    "julia": {
      "command": "julia",
      "lint": {
          "run": false,
          "missingrefs": false
      },
      "filetypes": ["julia"]
    },
    "python": {
        "setIntepreter": "~/miniconda3/bin/python"
    }
  },
  "signature.target": "echo"
}
